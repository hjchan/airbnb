<%= form_for @user do |form| %>
	<div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-4">
      <%= form.text_field :email, type: 'Email', class: "form-control-plaintext" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :phone, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :country, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :country, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :gender, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= form.select(:gender, ['Male', 'Female'], {}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :birthday, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= date_select :user, :birthday, {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="submit-field">
    <%= form.submit class: "btn btn-primary" %>
  </div>

<% end %>